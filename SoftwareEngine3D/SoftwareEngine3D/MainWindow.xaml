<Window x:Class="SoftwareEngine3D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <Image x:Name="frontBuffer" />
        <TextBlock x:Name="fps" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="20" Foreground="White"></TextBlock>
        <TextBlock x:Name="averageFps" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10" Foreground="White"></TextBlock>
    </Grid>
</Window>
